<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <form action="~/UI/MH_GHI_TAMGIAC.cshtml" method="post">            
            <p>
                <label for="text">X 1: </label><br />
                <input type="text" name="x1" value="" />
            </p>
            <p>
                <label for="text">Y 1: </label><br />
                <input type="text" name="y1" value="" />
            </p>
            <p>
                <label for="text">X 2: </label><br />
                <input type="text" name="x2" value="" />
            </p>
            <p>
                <label for="text">Y 2: </label><br />
                <input type="text" name="y2" value="" />
            </p>
            <p>
                <label for="text">X 3: </label><br />
                <input type="text" name="x3" value="" />
            </p>
            <p>
                <label for="text">Y 3: </label><br />
                <input type="text" name="y3" value="" />
            </p>

            <p>

                <input type="submit" value="Write" />
            </p>
        </form>
    </div>
    @totalMessage
</body>
</html>
