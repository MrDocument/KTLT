@using OnTap_KTLT
@{
    Layout = null;

    string totalMessage = string.Empty;

    TRIANGLE tg;

    if (IsPost)
    {     
        
        tg.A.X = int.Parse(Request["x1"]);
        tg.A.Y = int.Parse(Request["y1"]);
        tg.B.X = int.Parse(Request["x2"]);
        tg.B.Y = int.Parse(Request["y2"]);
        tg.C.X = int.Parse(Request["x3"]);
        tg.C.Y = int.Parse(Request["y3"]);

        ser_Triangle.writeTriangle(tg);

        totalMessage = "Writed success!!";
    }


}

